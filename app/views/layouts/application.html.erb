<!DOCTYPE html>
<html>
<head>
  <title>MyRoutes</title>
  <%= stylesheet_link_tag :all %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  <%= javascript_include_tag 'jquery-1.6.1.min' %>
  <%= javascript_include_tag 'jquery-serializeJSON' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'events' %>
  <%= csrf_meta_tag %>
</head>
<body>

	<div id="header">
		<div id='site_logo'>
			<%= link_to 'MyRoutes', root_url %>
		</div>

		<div id='user_menu'>
			<% if current_user %>
				<%= link_to 'My Profile', users_path %> |
				<%= link_to 'Logout', :logout %>
			<% else %>
				<%= link_to 'Register', new_user_path %> |
				<%= link_to 'Login', :login %>
			<% end %>
		</div>
	</div>
	
	<div id="main">
	
		<%= yield %>

	</div>
</body>
</html>
