<!DOCTYPE html>
<html>
<head>
  <title>MyRoutes</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag 'jquery-1.6.1.min' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>

	<% if current_user %>
		<%= link_to 'Profile', users_path %>
