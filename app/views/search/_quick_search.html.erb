<div id='quick_search' class='fullpage'>
	<%= form_for 'search', :url => routes_path, :html => {:method => :get, :class=>'fullpage' } do |f| %>
		<%= f.select( :country_equals, options_for_select(["Country", "Ireland", "United Kingdom"], "Country") )%>
		<%= f.collection_select( :sports_id_in, Sport.all, :id, :name ) %>
		<%= f.text_field :description_or_title_contains, :value=>'Refine Search' %>
		<%= f.submit 'Search' %>
  <% end %>
</div>